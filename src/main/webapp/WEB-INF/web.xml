<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>/,
                     /,
                     /,
                     /,
                     /,
                     /,
                     /,
                     /,
                     /,</param-value>
    </context-param>
    <context-param>
        <param-name>data.source</param-name>
        <!-- qui configuriamo in nome della data source da usare nel codice -->
        <param-value>jdbc/webdb2</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.homepage_url</param-name>
        <param-value>homepage</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>error.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.filler.dummy</param-name>
        <param-value>it.univaq.f4i.iw.examples.application.DummyModelFiller</param-value>
    </context-param>
    <listener>
        <listener-class>it.univaq.f4i.iw.framework.application.ApplicationInitializer</listener-class>
    </listener>


    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.Home</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeAdmin</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.HomeAdmin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Impostazioni</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.Impostazioni</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GestioneUtenti</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.GestioneUtenti</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailSender</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.EmailSender</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ElencoRichieste</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.ElencoRichieste</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ElencoProposte</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.ElencoProposte</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ElencoOrdini</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.ElencoOrdini</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DettaglioRichiesta</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.DettaglioRichiesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DettagioProposta</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.DettagioProposta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DettaglioOrdine</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.DettaglioOrdine</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreaRichiesta</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.CreaRichiesta</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreaProposta</servlet-name>
        <servlet-class>it.univaq.f4i.iw.examples.controller.CreaProposta</servlet-class>
    </servlet>
    





    
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    





    

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/webdb2</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
